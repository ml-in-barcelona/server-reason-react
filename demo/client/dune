;; hydrate.re

(melange.emit
 (enabled_if
  (= %{profile} dev))
 (target app)
 (modules hydrate)
 (module_systems
  (es6 js))
 (libraries melange reason-react melange.dom melange-webapi demo_shared_js)
 (preprocess
  (pps browser_ppx -js reason-react-ppx melange.ppx)))

(rule
 (enabled_if
  (= %{profile} dev))
 (alias client)
 (deps
  (package server-reason-react)
  (alias_rec melange)
  (:script build.mjs)
  (:input app/demo/client/Hydrate.js)
  (source_tree node_modules)
  (file package.json))
 (target hydrate-static-html.js)
 (action
  (progn
   (run node %{script} %{input} %{target}))))

