;; index.re

(melange.emit
 (enabled_if
  (= %{profile} dev))
 (target app)
 (modules index)
 (module_systems
  (es6 js))
 (libraries melange reason-react melange.dom melange-webapi demo_shared_js)
 (preprocess
  (pps browser_ppx -js reason-react-ppx melange.ppx)))

(rule
 (enabled_if
  (= %{profile} dev))
 (alias client)
 (deps
  (package server-reason-react)
  (alias_rec melange)
  (:script build.mjs)
  (:input app/demo/client/index.js)
  (source_tree node_modules)
  (file package.json)
  (source_tree ../../packages/extract-client-components))
 (target app.js)
 (action
  (progn
   (run node %{script} %{input} %{target}))))

;; create-from-fetch.jsx

(rule
 (enabled_if
  (= %{profile} dev))
 (alias client)
 (deps
  (package server-reason-react)
  (alias_rec melange)
  (:input create-from-fetch.jsx)
  (:script build.mjs)
  (file package.json)
  (source_tree node_modules)
  (source_tree ../../packages/extract-client-components))
 (action
  (progn
   (run node %{script} %{input} app/demo/client/ --extract=true))))

;; create-from-readable-stream.jsx

(rule
 (enabled_if
  (= %{profile} dev))
 (alias client)
 (deps
  (package server-reason-react)
  (alias_rec melange)
  (:input create-from-readable-stream.jsx)
  (:script build.mjs)
  (file package.json)
  (source_tree node_modules)
  (source_tree ../../packages/extract-client-components))
 (action
  (progn
   ; (with-stdout-to
   ; %{target}
   ; (run %{extract} app))
   (run node %{script} %{input} app/demo/client/ --extract=true))))
