;; index.re

(melange.emit
 (enabled_if
  (= %{profile} dev))
 (target app)
 (modules index)
 (module_systems
  (es6 js))
 (libraries melange reason-react melange.dom melange-webapi demo_shared_js)
 (preprocess
  (pps browser_ppx -js reason-react-ppx melange.ppx)))

(rule
 (enabled_if
  (= %{profile} dev))
 (alias client)
 (deps
  (alias_rec melange)
  (:script build.mjs))
 (target app.js)
 (action
  (progn
   (run node %{script} app/demo/client/index.js %{target}))))

;; create-from-fetch.jsx

(rule
 (enabled_if
  (= %{profile} dev))
 (alias client)
 (deps
  (alias_rec melange)
  (:input create-from-fetch.jsx)
  (:script build.mjs))
 (action
  (progn
   (run node %{script} %{input} app/demo/client/))))

;; create-from-readable-stream.jsx

(rule
 (enabled_if
  (= %{profile} dev))
 (alias client)
 (deps
  (alias_rec melange)
  (:input create-from-readable-stream.jsx)
  (:script build.mjs)
  ../../packages/extract-client-components/esbuild-plugin.mjs
  ; (:extract %{bin:server_reason_react.extract_client_components})
  )
 (action
  (progn
   ; (with-stdout-to
   ; %{target}
   ; (run %{extract} app))
   (run node %{script} %{input} app/demo/client/))))
