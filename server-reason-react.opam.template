# build command is custom to add "@new-doc"
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@new-doc" {with-doc}
  ]
]
depexts: [
  ["xxhash"] {os = "macos" & os-distribution = "homebrew"}
  ["libxxhash-dev"] {os-family = "debian"}
]
